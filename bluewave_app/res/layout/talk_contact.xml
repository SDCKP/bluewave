<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/contact_lastmsg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contact_picture"
        android:layout_alignParentRight="true"
        android:layout_marginRight="3dp"
        android:text=""
        android:textColor="@android:color/tertiary_text_dark"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/contact_picture"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        android:minHeight="55dp"
        android:minWidth="55dp"
        android:maxWidth="55dp"
        android:maxHeight="55dp"
        android:contentDescription="@string/txt_profile_default_avatar"
        android:src="@drawable/contact_avatar" />

    <TextView
        android:id="@+id/contact_alias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contact_picture"
        android:layout_toRightOf="@+id/contact_picture"
        android:layout_marginLeft="3dp"
        android:text="Contact alias"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/contact_lastmsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/contact_picture"
        android:layout_toLeftOf="@+id/contact_lastmsg_time"
        android:layout_toRightOf="@+id/contact_picture"
        android:layout_marginLeft="3dp"
        android:maxLines="1"
        android:text="Haha yeah that was very nice"
        android:textColor="@android:color/tertiary_text_dark"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>
